    "@types/shelljs": "^0.8.15",
    "chalk": "4.1.2",
    "concurrently": "^9.1.0",
    "gulp": "^5.0.0",
    "lerna": "^8.2.1",
    "rimraf": "^6.0.1",
    "shelljs": "^0.8.5"
  },
