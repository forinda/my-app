{
  "name": "payroll-system",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test:ui": "pnpm --filter=frontend test",
    "test:client": "pnpm --filter=client-ui test",
    "test:backend": "pnpm --filter=backend test",
    "test:all": "pnpm --filter=backend test && pnpm --filter=frontend test",
    "start:backend": "pnpm --filter=backend start",
    "dev:backend": "pnpm --filter=backend dev",
    "dev:ui": "pnpm --filter=frontend dev",
    "dev:client": "pnpm --filter=client-ui dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:ui\" \"pnpm dev:client\"",
    "build:backend": "pnpm --filter=backend build",
    "build:ui": "pnpm --filter=frontend build",
    "clean:backend": "pnpm --filter=backend clean",
    "clean:ui": "pnpm --filter=frontend clean",
    "clean": "pnpm --filter=backend clean && pnpm --filter=frontend clean",
    "build": "pnpm --filter=backend build && pnpm --filter=frontend build",
    "migrate:new": "pnpm --filter=backend migrate:new",
    "migrate:deploy": "pnpm --filter=backend migrate:deploy",
    "prebuild": "pnpm clean",
    "prestart": "pnpm build",
    "start": "pnpm start:backend",
    "lint:backend": "pnpm --filter=backend lint",
    "lint:frontend": "pnpm --filter=frontend lint",
    "lint:client": "pnpm --filter=client-ui lint",
    "lint": "pnpm --filter=backend lint && pnpm --filter=frontend lint",
    "format:backend": "pnpm --filter=backend format",
    "format:frontend": "pnpm --filter=frontend format",
    "format:client": "pnpm --filter=client-ui format",
    "format": "pnpm --filter=backend format && pnpm --filter=frontend format && pnpm --filter=client-ui format",
    "lint:fix:backend": "pnpm --filter=backend lint:fix",
    "lint:fix:frontend": "pnpm --filter=frontend lint:fix",
    "lint:fix:client": "pnpm --filter=client-ui lint:fix",
    "lint:fix": "pnpm --filter=backend lint:fix && pnpm --filter=frontend lint:fix",
    "db:view": "pnpm --filter=backend db:view"
  },
  "devDependencies": {
    "concurrently": "catalog:",
    "rimraf": "catalog:"
  },
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
